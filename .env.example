# =============================================================================
# AI VIDEO ENGINEER - BACKEND CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# OPERATION MODE (IMPORTANT!)
# -----------------------------------------------------------------------------
# Set to "True" for mock mode (no API calls, simulated video generation)
# Set to "False" for production mode (requires API keys below)
MOCK_MODE=True

# -----------------------------------------------------------------------------
# FLASK CONFIGURATION
# -----------------------------------------------------------------------------
FLASK_ENV=production
SECRET_KEY=your-secret-key-change-in-production
PORT=5000

# -----------------------------------------------------------------------------
# CORS CONFIGURATION
# -----------------------------------------------------------------------------
# "*" allows all origins. For production, set to your frontend URL
CORS_ORIGINS=*

# -----------------------------------------------------------------------------
# API KEYS (Only needed when MOCK_MODE=False)
# -----------------------------------------------------------------------------

# OpenAI API Key (for script polishing with GPT-4)
# Get yours at: https://platform.openai.com/api-keys
# Estimated cost: $0.01-0.05 per video script
OPENAI_API_KEY=sk-proj-your-openai-key-here
OPENAI_MODEL=gpt-4

# ElevenLabs API Key (for voiceover generation)
# Get yours at: https://elevenlabs.io/app/settings/api-keys
# Estimated cost: ~1000 characters = $0.30 per video
ELEVENLABS_API_KEY=your-elevenlabs-key-here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# HeyGen API Key (for avatar video generation)
# Get yours at: https://app.heygen.com/settings/api
# Estimated cost: $0.50-2.00 per video depending on length
HEYGEN_API_KEY=your-heygen-key-here
HEYGEN_AVATAR_ID=default

# -----------------------------------------------------------------------------
# WASABI S3 STORAGE (For video file storage)
# -----------------------------------------------------------------------------
# Get credentials at: https://wasabi.com/
# Estimated cost: ~$0.01 per GB per month
WASABI_ACCESS_KEY=your-wasabi-access-key
WASABI_SECRET_KEY=your-wasabi-secret-key
WASABI_BUCKET_NAME=ai-videos
WASABI_REGION=us-east-1
WASABI_ENDPOINT=https://s3.wasabisys.com

# -----------------------------------------------------------------------------
# BUBBLE.IO INTEGRATION (Optional - for metadata logging)
# -----------------------------------------------------------------------------
# If using Bubble.io to store video metadata
BUBBLE_API_KEY=your-bubble-api-key
BUBBLE_APP_URL=https://your-app.bubbleapps.io/api/1.1

# =============================================================================
# QUICK START GUIDE
# =============================================================================
#
# 1. MOCK MODE (No API keys needed - Current setup):
#    - Keep MOCK_MODE=True
#    - Deploy to Render
#    - Frontend will show simulated video generation
#
# 2. PRODUCTION MODE (Real video generation):
#    Step 1: Get API Keys
#      - OpenAI: https://platform.openai.com/api-keys
#      - ElevenLabs: https://elevenlabs.io/app/settings/api-keys
#      - HeyGen: https://app.heygen.com/settings/api
#      - Wasabi: https://wasabi.com/
#    
#    Step 2: Update Render Environment Variables
#      - Go to: https://dashboard.render.com
#      - Select your backend service
#      - Click "Environment" tab
#      - Set MOCK_MODE=False
#      - Add all API keys above
#      - Click "Save Changes"
#    
#    Step 3: Backend will auto-redeploy with real API integration
#
# =============================================================================

# VibeVoice TTS Configuration
VIBEVOICE_WS_ENDPOINT=wss://your-vibevoice-server.com/ws
VIBEVOICE_VOICE_ID=default
VIBEVOICE_SAMPLE_RATE=24000
TTS_PROVIDER=vibevoice

# TTS Limits Configuration
TTS_MAX_INPUT_CHARS=3000
TTS_MIN_INPUT_CHARS=1
TTS_MAX_AUDIO_DURATION=90
TTS_CHARS_PER_SECOND=15

# VibeVoice Timeout & Retry
VIBEVOICE_CONNECTION_TIMEOUT=10
VIBEVOICE_CHUNK_TIMEOUT=5
VIBEVOICE_MAX_RETRIES=2

# Streaming TTS (Future Feature)
TTS_STREAMING_ENABLED=false
TTS_STREAMING_CHUNK_SIZE=4096
TTS_STREAMING_BUFFER_SIZE=8192
TTS_STREAMING_TIMEOUT=30

# TTS Analytics
TTS_ANALYTICS_ENABLED=true
TTS_ANALYTICS_PATH=/tmp/tts_analytics

# Wasabi Cleanup Configuration
WASABI_AUDIO_RETENTION_DAYS=7
WASABI_VIDEO_RETENTION_DAYS=30
WASABI_TEMP_RETENTION_DAYS=1
CLEANUP_DRY_RUN=false

# TTS Caching
TTS_CACHE_ENABLED=true
TTS_CACHE_DIR=/tmp/tts_cache
TTS_CACHE_MAX_SIZE_MB=500
TTS_CACHE_TTL_HOURS=168

# Voice Consistency Parameters
VIBEVOICE_STYLE=neutral
VIBEVOICE_SEED=42
VIBEVOICE_PROFILE=professional
VIBEVOICE_SPEED=1.0
VIBEVOICE_PITCH=1.0
VIBEVOICE_ENERGY=1.0

# Multi-Language Support
VIBEVOICE_SUPPORTED_LANGUAGES=en
ELEVENLABS_SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,zh,ja,ko,ar,ru

# Logging Configuration
JSON_LOGGING=true
LOG_LEVEL=INFO
LOG_FILE=/tmp/app.log

# GPU Autoscaling
GPU_ORCHESTRATOR=manual
GPU_MIN_NODES=1
GPU_MAX_NODES=5
GPU_SCALE_UP_THRESHOLD=0.8
GPU_SCALE_DOWN_THRESHOLD=0.3

# Kubernetes Config (if using K8s)
K8S_DEPLOYMENT_NAME=vibevoice-tts
K8S_NAMESPACE=default

# Docker Swarm Config (if using Swarm)
SWARM_SERVICE_NAME=vibevoice-tts

# Internal Video Engine
INTERNAL_VIDEO_ENGINE_ENABLED=false
VIDEO_TEMPLATES_DIR=/tmp/video_templates
VIDEO_OUTPUT_DIR=/tmp/video_output

# Lip-Sync Engine
LIPSYNC_ENGINE_ENABLED=false
LIPSYNC_MODEL_PATH=/models/lipsync
LIPSYNC_MODEL_TYPE=wav2lip
LIPSYNC_FPS=25
LIPSYNC_WIDTH=512
LIPSYNC_HEIGHT=512
LIPSYNC_SMOOTHING=0.8
LIPSYNC_BLEND=0.9

# Job Queue System
JOB_QUEUE_BACKEND=memory
REDIS_URL=redis://localhost:6379
RABBITMQ_URL=amqp://localhost
JOB_MAX_RETRIES=3
JOB_MAX_CONCURRENT=5
JOB_TIMEOUT_SECONDS=300

# Mock Mode (overrides for specific services)
ELEVENLABS_MOCK_MODE=true
HEYGEN_MOCK_MODE=true
WASABI_MOCK_MODE=true
